# 数据库配置
POSTGRES_USER=rabbit
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=rabbit_lark
DB_POOL_MAX=10                    # 最大连接数
DB_IDLE_TIMEOUT=30000             # 空闲超时（毫秒）
DB_CONNECT_TIMEOUT=5000           # 连接超时（毫秒）
DB_STATEMENT_TIMEOUT=10000        # 查询超时（毫秒）

# 飞书应用配置
FEISHU_APP_ID=cli_xxx
FEISHU_APP_SECRET=your_app_secret
FEISHU_ENCRYPT_KEY=your_encrypt_key  # 可选，用于验证 webhook 签名

# 催办表格配置
REMINDER_APP_TOKEN=xxx
REMINDER_TABLE_ID=xxx

# 安全配置
API_KEY=your_api_key_here  # 可选，用于保护 API 接口

# 日志配置
LOG_LEVEL=info  # error, warn, info, debug
NODE_ENV=production
